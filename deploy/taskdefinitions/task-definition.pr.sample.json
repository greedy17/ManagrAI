{
  "containerDefinitions": [
    {
      "name": "managr-app",
      "image": "<ecr_endpoint>/thinknimble/managr/server:latest",
      "cpu": 1024,
      "memory": 2048,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DD_SERVICE",
          "value": "managr-server"
        },
        {
          "name": "DD_ENV",
          "value": "fargate"
        },
        {
          "name": "DD_PROFILING_ENABLED",
          "value": "true"
        },
        {
          "name": "ALLOWED_HOSTS",
          "value": "*"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "<db_host_secret_arn>"
        },
        {
          "name": "DB_USER",
          "valueFrom": "<db_user_secret_arn>"
        },
        {
          "name": "DB_PASS",
          "valueFrom": "<db_pass_secret_arn>"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "<db_name_secret_arn>"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/managr-app",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "managr-app-worker",
      "image": "<ecr_endpoint>/thinknimble/managr/server:latest",
      "cpu": 0,
      "portMappings": [],
      "essential": true,
      "entryPoint": [
        "ddtrace-run",
        "python3",
        "server/manage.py",
        "process_tasks"
      ],
      "environment": [
        {
          "name": "DD_SERVICE",
          "value": "managr-server-worker"
        },
        {
          "name": "DD_ENV",
          "value": "fargate"
        },
        {
          "name": "DD_PROFILING_ENABLED",
          "value": "true"
        },
        {
          "name": "ALLOWED_HOSTS",
          "value": "*"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "<db_host_secret_arn>"
        },
        {
          "name": "DB_USER",
          "valueFrom": "<db_user_secret_arn>"
        },
        {
          "name": "DB_PASS",
          "valueFrom": "<db_pass_secret_arn>"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "<db_name_secret_arn>"
        }
      ],
      "dependsOn": [
        {
          "containerName": "managr-app",
          "condition": "START"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/managr-app",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "datadog-agent",
      "image": "datadog/agent:latest",
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 8126,
          "hostPort": 8126,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "ECS_FARGATE",
          "value": "true"
        },
        {
          "name": "DD_APM_ENABLED",
          "value": "true"
        },
        {
          "name": "DD_APM_NON_LOCAL_TRAFFIC",
          "value": "true"
        },
        {
          "name": "DD_TAGS",
          "value": "env:fargate"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [
        {
          "name": "DD_API_KEY",
          "valueFrom": "<dd_api_key_secret_arn>"
        }
      ]
    }
  ],
  "family": "managr-app-task",
  "executionRoleArn": "arn:aws:iam::<aws_account_id>:role/<ecs_task_execution_role_name>",
  "networkMode": "awsvpc",
  "volumes": [],
  "placementConstraints": [],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048"
}
